@model ProductViewModel
@{
    ViewData["Title"] = "Edit Product Information";
}
<h3>Edit Product Information</h3>
@{
    var info = ViewData["Info"];
}
@if (info != null)
{
    if (Convert.ToBoolean(ViewData["Status"]))
    {
        <div class="alert alert-success" role="alert">
            @info
        </div>
    }
    else
    {
        <div class="alert alert-danger" role="alert">
            @info
        </div>
    }
}
<form action="/product/update" method="post">
    <div class="mb-3">
        <input type="hidden" name="Id" value="@Model.Id" />
    </div>
    <div class="mb-3">
        <label class="form-label">Name:</label>
        <input type="text" class="form-control" name="Name" placeholder="type name" value="@Model.ProductName" required>
    </div>
    <div class="mb-3">
        <label class="form-label">Product Description</label>
        <input type="text" class="form-control" name="Description" placeholder="type product details" value="@Model.Description" required>
    </div>
    <div class="mb-3">
        <label class="form-label">Purchase Price</label>
        <input type="number" class="form-control" name="PurchasePrice" placeholder="type purchase price" value="@Model.PurchasePrice" required>
    </div>
    <div class="mb-3">
        <label class="form-label">Sales Price</label>
        <input type="number" class="form-control" name="SalesPrice" placeholder="type product sales price" value="@Model.SalesPrice" required>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Category</label>
        <div class="col-sm-10">
            <select class="form-control" name="CategoryId">
                <option value="@Model.CategoryId">@Model.Category</option>
                @foreach (var c in ViewBag.Categories)
                {
                    <option value="@c.Id">@c.CategoryName</option>
                }
            </select>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a href="/product/list" class="btn btn-outline-primary">List</a>
</form>