﻿@{
    ViewData["Title"] = "Add New Cashier";
}
<h3>New Cashier Register</h3>
@{
    var info = ViewData["Info"];
}
@if (info != null)
{
    if (Convert.ToBoolean(ViewData["Status"]))
    {
        <div class="alert alert-success" role="alert">
            @info
        </div>
    }
    else
    {
        <div class="alert alert-danger" role="alert">
            @info
        </div>
    }
}
<form action="/cashier/entry" method="post">
    <div class="mb-3">
        <label class="form-label">Name:</label>
        <input type="text" class="form-control" name="Name" required placeholder="type name">
    </div>
    <div class="mb-3">
        <label class="form-label">Gender</label>
        <div class="form-check">
            <input type="radio" class="form-check-input" name="Gender"  
                   required value="f">
            <label class="form-check-label" for="Gender">Female</label>
        </div>
        <div class="form-check">
            <input type="radio" class="form-check-input" name="Gender" required value="m">
            <label class="form-check-label" for="Gender">Male</label>
        </div>
    </div>
    <div class="mb-3">
        <label class="form-label">Birth Date</label>
        <input type="date" class="form-control" name="BrithDate" required min="1990-01-01" max="@DateTime.Now.ToString("yyyy-MM-dd")">
    </div>
    <div class="mb-3">
        <label class="form-label">DOE</label>
        <input type="date" class="form-control" name="DOE" required>
    </div>
    <div class="mb-3">
        <label class="form-label">DOR</label>
        <input type="date" class="form-control" name="DOR">
    </div>
    <div class="mb-3">
        <label class="form-label">Phone</label>
        <input type="tel" class="form-control" name="Phone" required placeholder="type phone">
    </div>
    <div class="mb-3">
        <label class="form-label">Salary</label>
        <input type="number" class="form-control" name="Salary" required placeholder="type basic salary">
    </div>
    <div class="mb-3">
        <label class="form-label">Address</label>
        <textarea class="form-control" placeholder="type address.." name="Address"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Entry</button>
    <a href="/cashier/list" class="btn btn-outline-primary">List</a>
</form>